[ T i t l e ]
input file for lecture about options

[ P a r a m e t e r s ]
 icntl    =           0      # (D=0) 3:ECH 5:NOR 6:SRC 7,8:GSH 11:DSH 12:DUMP
 maxcas   =        1000     # (D=10) number of particles per one batch
 maxbch   =           1     # (D=10) number of batches
 imagnf   =           1     # (D=0) magnetic field

[ S o u r c e ]
   s-type =   1             # mono-energetic axial source
     proj =  proton         # kind of incident particle         
       e0 =   200.00        # energy of beam [MeV]
       r0 =   2.5000        # radius [cm]
       x0 =   0.0000        # (D=0.0) center position of x-axis [cm]
       y0 =   0.0000        # (D=0.0) center position of y-axis [cm]
       z0 =  -10.000        # minimum position of z-axis [cm]
       z1 =  -10.000        # maximum position of z-axis [cm]
      dir =   1.0000        # z-direction of beam [cosine]

[ M a t e r i a l ]
MAT[ 1 ] 
            H         2.0000000E+00
            O         1.0000000E+00

[ Mat Name Color ]
  mat    name     size    color         # HSB color value
  0      Void     1.00    lightgray     # { -0.800  1.000  1.000 }

[ S u r f a c e ]
  10  so     500.
  11  cz       5.
  12  pz       0.
  13  pz      10.

[ C e l l ]
 100    -1      10
 101     0     -11  12  -13  trcl=1
 102     1 -1  -11  12  -13  trcl=2
 110     0     -10  #101 #102 

[ Transform ]
*tr1   10  0 45    0  0  0    2 45    0  0    0  0    3
*tr2    0  0 20    0  0  0    0  0    0  0    0  0    3

[ Magnetic Field ]
   reg    typ    gap            mgf
   102     2     10.00000      -100.0000    

[ Timer ] 
   reg     in     out   coll     ref
   102      0      -1       0      0

[ T - T r a c k ]
    title = Track Detection using [T-track] tally
     mesh =  xyz            # mesh type is xyz scoring mesh
   x-type =    2            # x-mesh is linear given by xmin, xmax and nx
     xmin =  -25.00000      # minimum value of x-mesh points
     xmax =   25.00000      # maximum value of x-mesh points
       nx =  100            # number of x-mesh points
   y-type =    1            # y-mesh is given by the below data
       ny =    1            # number of y-mesh points
           -5.0  5.0
   z-type =    2            # z-mesh is linear given by zmin, zmax and nz
     zmin =  -20.00000      # minimum value of z-mesh points
     zmax =   80.00000      # maximum value of z-mesh points
       nz =  200            # number of z-mesh points
   e-type =    1            # e-mesh is given by the below data
       ne =    1            # number of e-mesh points
            0.0  5000.0
     unit =    1            # unit is [1/cm^2/source]
     axis =   xz            # axis of output
     file = track_xz.out    # file name of output for the above axis
     part =  proton   
    gshow =    3            # 0: no 1:bnd, 2:bnd+mat, 3:bnd+reg 4:bnd+lat
   epsout =    1            # (D=0) generate eps file by ANGEL

[ T - C r o s s ]
    title = Boundary crossing detection using [T-cross] tally
     mesh =  reg            # mesh type is xyz scoring mesh
      reg =  1 
      non   r-from    r-to    area
       1     110       101      1
   e-type =    1            # e-mesh is given by the below data
       ne =    1            # number of e-mesh points
            0.0  5000.0
   t-type =    2            # linear t-mesh 
       nt =   100           # number of t-mesh points
     tmin =   0.0           # minimum value of t-mesh points
     tmax =   4.0           # maximum value of t-mesh points
     unit =    1            # unit is [1/cm2/source]
     axis =   t             # axis of output
   output = current         # output quantity
     file = cross-time.out    # file name of output for the above axis
     part =  proton   
   epsout =    1            # (D=0) generate eps file by ANGEL

[END]
