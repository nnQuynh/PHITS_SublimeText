[ T i t l e ]
Sample input file for generating GCR fluxes on ground

[ P a r a m e t e r s ]
 icntl    =           0     # (D=0) 3:ECH 5:NOR 6:SRC 7,8:GSH 11:DSH 12:DUMP
 maxcas   =       10000     # (D=10) number of particles per one batch
 maxbch   =          10     # (D=10) number of batches
 e-mode   =           2     # (D=0) 0: Normal, 1: Event generator mode Ver.1, 2: Ver.2
 negs     =           2     # (D=-1) =-1:original, =0:No, =1:EGS
 mdbatima =        3000     # (D=500) max database size of ATIMA
 maxbnk   =      100000     # (D=10000) maximum bank memory length
 iMeVperU =           1     # (D=0) 0:[MeV] or 1:[MeV/u] is unit of tally output
 emin(12) =  1.00000000     # (D=1.e+9) cut-off energy of electron (MeV)
 emin(13) =  1.00000000     # (D=1.e+9) cut-off energy of positron (MeV)
 esmax    =  100000000.     # (D=1.0e6) max energy/u for charged particle range
 ipnint   =           1     # (D=0) 0: no, 1: consider photo-nuclear reaction
[ S o u r c e ]
set:c1[100.0]  $ Radius of air and soil
set:c2[100.0] $ Thickness of soil
set:c3[200.0]  $ Thickness of air

set:c11[-cos(0/180*pi)]   $ above 0 degree (downward)
set:c12[-cos(90/180*pi)]  $ below 90 degree (horizontal)

  totfact =  pi*c1**2       # (D=1.0) global factor
 infl:{source.inp}
     proj =  muon+   # kind of incident nucleus 
 infl:{source.inp}
     proj =  muon-   # kind of incident nucleus 
 infl:{source.inp}
     proj =  neutron   # kind of incident nucleus 
 infl:{source.inp}
     proj =  photon   # kind of incident nucleus 
 infl:{source.inp}
     proj =  electron   # kind of incident nucleus 
 infl:{source.inp}
     proj =  positron   # kind of incident nucleus 

[ M a t e r i a l ]
m1 $ Ground with 20 percent water, 2.7g/cm3
  O  -0.592
  Si -0.28
  Al -0.106
  H  -0.022

m2 $ Air. 0.0012 g/cm^3
 O  0.232 
 N  0.755
 Ar 0.13

[ Surface ]
  1  pz  -c2-0.01   $ depth under ground
  2  pz   0         $ ground surface
  3  pz   c3+0.01   $ air above ground
*21  cz   c1+0.01   $ reflection surface
 99  so   10000.0  $ outer boundary

[ Cell ]
  1  1  -2.7      -21 1 -2  $ soil
  2  2  -1.21e-3  -21 2 -3  $ air
 99  -1 -99 #1 #2

[ T - T r a c k ]
    title = Track Detection in reg mesh
     mesh =  reg            # mesh type is region-wise
      reg =    1  2
   volume 
      reg  vol
        1  c2*pi*c1**2
        2  c3*pi*c1**2
   e-type =    3            # e-mesh is log given by emin, emax and ne
       ne =   60            # number of e-mesh points
     emin =   1.000000      # minimum value of e-mesh points
     emax =   1.0e6      # maximum value of e-mesh points
     unit =    2            # unit is [1/cm^2/MeV/source]
     axis =   eng            # axis of output
     file = track_reg.out  # file name of output for the above axis
     part =  muon+ muon- neutron photon electron positron
   epsout =    2            # (D=0) generate eps file by ANGEL
 y-txt    = Flux [1/cm^2/(MeV/n)/sec]

[ T - T r a c k ]
    title = Cosmic-ray flux
     mesh =  xyz            # mesh type is xyz scoring mesh
   x-type =    2            # In the case of rotating figure, x & z data should be replaced by each other
     xmin =  -c2            # minimum value of x-mesh points
     xmax =   c3            # maximum value of x-mesh points
       nx =   100           # number of x-mesh points
   y-type =    2            # y-mesh is linear given by ymin, ymax and ny
     ymin =  -c1/4          # minimum value of y-mesh points
     ymax =   c1/4          # maximum value of y-mesh points
       ny =    1            # number of y-mesh points
   z-type =    2            # In the case of rotating figure, x & z data should be replaced by each other
     zmin =  -c1*1.1            # minimum value of z-mesh points
     zmax =   c1*1.1            # maximum value of z-mesh points
       nz =   100           # number of z-mesh points
  2D-type =    3            # 1:Cont, 2:Clust, 3:Color, 4:xyz, 5:mat, 6:Clust+Cont, 7:Col+Cont
     axis =   xz            # axis of output
     file = track_xz.out       # file name of output for the above axis
     part = muon+ muon- neutron photon electron positron
   e-type =    1            # e-mesh is given by the below data
       ne =    1            # number of e-mesh points
             0.0  1e10
     unit =    1            # unit is [1/cm^2/source]
   epsout =    1            # (D=0) generate eps file by ANGEL   
    gshow =    3            # 0: no 1:bnd, 2:bnd+mat, 3:bnd+reg 4:bnd+lat
    z-txt = Flux [/cm2/sec]
$ Rotating figure by 90 degree
     trcl = 0 0 0 0 0 1 0 1 0 1 0 0
    x-txt = x [cm]
    y-txt = z [cm]

[ T - C r o s s ]
    title = Energy distribution in r-z mesh
     mesh =  r-z            # mesh type is xyz scoring mesh
   r-type =    1            # y-mesh is given by the below data
       nr =    1            # number of y-mesh points
            0.0 c1
   z-type =    1            # z-mesh is linear given by zmin, zmax and nz
       nz =    2            # number of z-mesh points
            -c2 0.0 c3
   e-type =    2            # e-mesh is log given by emin, emax and ne
     emin =   0.0           # minimum value of e-mesh points
     emax =   1.0e10           # maximum value of e-mesh points
       ne =   1            # number of e-mesh points
   a-type =    2            # e-mesh is log given by emin, emax and ne
     amin =  -1.0           # minimum value of e-mesh points
     amax =   1.0           # maximum value of e-mesh points
       na =   20            # number of e-mesh points
     unit =    4            # unit is [1/cm^2/sr/source]
     axis =  cos            # axis of output
   output = a-flux            # surface crossing flux
     file = cross.out   # file name of output for the above axis
     part = muon+ muon- neutron photon electron positron
   epsout =    2            # (D=0) generate eps file by ANGEL
 y-txt    = Flux [1/cm^2/sr)/sec]

[END]

