[ T i t l e ]
sample input of energy distribution of tally results using e-type = 20

[ P a r a m e t e r s ]
 icntl    =           0     # (D=0) 3:ECH 5:NOR 6:SRC 7,8:GSH 11:DSH 12:DUMP
 maxcas   =      100000     # (D=10) number of particles per one batch
 maxbch   =           1     # (D=10) number of batches
 file(1)  = c:/phits        # (D=c:/phits) PHITS install folder name
 file(6)  = phits.out       # (D=phits.out) general output file name
 negs     =           1     # (D=-1) =-1:original, =0:No, =1:EGS

[ S o u r c e ]
  totfact =   1.0           # (D=1.0) global factor
   s-type =   1             # axial source with energy spectrum
     proj =  photon         # kind of incident particle         
       r0 =   10.           # radius [cm]
       z0 =   21.           # minimum position of z-axis [cm]
       z1 =   21.           # maximum position of z-axis [cm]
      dir =   1.0           # z-direction of beam [cosine]
   e-type =  20             # energy distribution given by tally output
     file =  cross_source.out  # file name of tally output

[ M a t e r i a l ]
mat[1]    H 2  O 1

[ S u r f a c e ]
  10  so     500.
  11  cz      10.
  12  pz       0.
  13  pz      20.
  14  pz      25.

[ C e l l ]
 100    -1      10            $ outer region
 101     1 -1.  -11  12  -13  $ water
 102     0      -11  13  -14  $ outer region for dump
 110     0      -10  #101 #102    $ void

[ T - C r o s s ]
    title = Energy distribution in region mesh
     mesh =  reg            # mesh type is region-wise
      reg =    1            # number of crossing regions
      non     r-from  r-to       area
        1     102     110      314.1593    
   e-type =    2            # e-mesh is linear given by emin, emax and ne
     emin =   0.0           # minimum value of e-mesh points
     emax =   2.0           # maximum value of e-mesh points
       ne =  200            # number of e-mesh points
     unit =    1            # unit is [1/cm^2/source]
     axis =  eng            # axis of output
     file = cross_eng.out   # file name of output for the above axis
   output = flux            # surface crossing flux
     part =  photon   
   epsout =    2            # (D=0) generate eps file by ANGEL

[ E n d ]
