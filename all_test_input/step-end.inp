[ T i t l e ]
Sample input for detector response calculation using isotropic source

[ P a r a m e t e r s ]
 icntl    =           0     # (D=0) 3:ECH 5:NOR 6:SRC 7,8:GSH 11:DSH 12:DUMP
 maxcas   =       10000     # (D=10) number of particles per one batch
 maxbch   =          10     # (D=10) number of batches
 negs     =           1     # (D=0) =1 EGS photon and electron
 e-mode   =           2     # (D=0) 0: Normal, 1: Event generator mode
 file(1)  = c:/phits        # (D=c:/phits) PHITS install folder name

[ S o u r c e ]
set: c3[10.0]  $ Radius of source sphere (cm)
set: c4[1.0]  $ Gamma ray energy
   s-type =   1             # mono-energetic axial source
     proj =  photon         # kind of incident nucleus          
       e0 =   c4            # energy of beam [MeV/u]
       r0 =   0.0000        # radius [cm]
       x0 =   0.0000        # (D=0.0) center position of x-axis [cm]
       y0 =   0.0000        # (D=0.0) center position of y-axis [cm]
       z0 =   -10
       z1 =   -10
c       r1 =  c3             # radius of sphere [cm]
c       r2 =  c3             # radius of source circle [cm]
      dir =   1             # inner direction with uniform dis. by analog
  totfact =  pi*c3**2       # (D=1.0) global factor

[ M a t e r i a l ]
MAT[ 1 ] 
           Si       1.000
MAT[ 2 ] 
           Al      1.000

[ C e l l ]
 1          1 -2.33    2 -3 -11
 2          2 -2.700   1 -4 -12  #1
 3          1 -2.33   -20
 98          0        #(1 -4 -12) 20 -999 
 99         -1          999

[ S u r f a c e ]
set: c1[2.0*2.54]  $ Detector radius (cm)
set: c2[0.1]       $ Cover thickness (cm)
 1            pz     -c1-c2
 2            pz     -c1
 3            pz      c1
 4            pz      c1+c2
11            cz      c1
12            cz      c1+c2
20            rcc    0    100    100      0      c1*sqrt(2)   c1*sqrt(2)   c1
 999          so     1.0000000E+04

[ T-Deposit ]
    title = Energy Deposition for each cell
     mesh =  reg            # mesh type is region-wise
      reg = 1
     unit =    3            # unit is [1/source] : only for output=deposit
   letmat =    0            # (D=0) material id for LET, 0: real material
  dedxfnc =    0            # (D=0) user defined multiplier, 0(no), 1, 2
 material =  all            # (D=all) number of specific material
   output = deposit         # deposit enerygy distribution
   e-type =    2            # e-mesh is linear given by emin, emax and ne
     emin =   0.000000      # minimum value of e-mesh points
     emax =   c4*1.5        # maximum value of e-mesh points
       ne =  200            # number of e-mesh points
     axis =   eng           # axis of output
     file = deposit.out     # file name of output for the above axis
     part =  all      
   y-txt  = Response [cm^2]
   epsout =    1            # (D=0) generate eps file by ANGEL
   dresol =  0.2            # (D=0) width = sqrt(dresol**2 + dfano*E)
    dfano =  0.05           # (D=0) width = sqrt(dresol**2 + dfano*E)

[ T - Deposit2 ]
    title = Energy deposition in reg mesh
     mesh =  reg            # mesh type is region-wise
      reg =  1  3
  e1-type =    2            # e-mesh is log given by emin, emax and ne
    emin  =  0.0  # minimum value of e-mesh points
    emax  =  c4*1.5         # maximum value of e-mesh points
       ne =  100            # number of e-mesh points
  e2-type =    2            # e-mesh is log given by emin, emax and ne
    emin  =  0.0  # minimum value of e-mesh points
    emax  =  c4*1.5         # maximum value of e-mesh points
       ne =  100            # number of e-mesh points
     unit =    1
     axis =    e12           # axis of output
     file = deposit2_reg.out     # file name of output for the above axis
     part =  all      
   epsout =    1            # (D=0) generate eps file by ANGEL

[ T - T r a c k ]
    title = Track Detection in xyz mesh
     mesh =  xyz            # mesh type is xyz scoring mesh
   x-type =    1            # y-mesh is given by the below data
       nx =    1            # number of y-mesh points
           -5.0  5.0
   y-type =    2            # x-mesh is linear given by xmin, xmax and nx
       ny =   50            # number of x-mesh points
     ymin =  -20.           # minimum value of x-mesh points
     ymax =  130.           # maximum value of x-mesh points
   z-type =    2            # z-mesh is linear given by zmin, zmax and nz
       nz =   70            # number of z-mesh points
     zmin =  -20.           # minimum value of z-mesh points
     zmax =  120.           # maximum value of z-mesh points
   e-type =    1            # e-mesh is given by the below data
       ne =    1            # number of e-mesh points
            0.0  5000.0
     unit =    1            # unit is [1/cm^2/source]
     axis =   yz            # axis of output
     file = track_xyz-xz.out  # file name of output for the above axis
     part =  all      
    gshow =    1            # 0: no 1:bnd, 2:bnd+mat, 3:bnd+reg 4:bnd+lat
   epsout =    1            # (D=0) generate eps file by ANGEL

[END]

