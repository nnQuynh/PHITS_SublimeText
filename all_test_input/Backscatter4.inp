[ P a r a m e t e r s ]
 icntl    =           0     # (D=0) 3:ECH 5:NOR 6:SRC 7,8:GSH 11:DSH 12:DUMP
 maxcas   =       10000     # (D=10) number of particles per one batch
 maxbch   =          10     # (D=10) number of batches
 file(1)  = c:/phits        # (D=c:/phits) PHITS install folder name
 file(6)  = phits.out       # (D=phits.out) general output file name

[ Source ]
set:c30[5.0]           $ Field size (side length) [cm]
set:c31[atan((c30/2.0/50.0)*sqrt(2.0))*180.0/PI] 
                       $ Solid angle of beam adjusted by parameter c30
   s-type =   1             # axial source
     proj =   photon        # kind of incident particle         
      dir =   1.0           # z-direction of beam [cosine] 0 degree
       r0 =   0.0           # radius [cm]
       x0 =   0.0           # Beam center in x
       y0 =   0.0           # Beam center in y
       z0 = -50.0           # minimum position of z-axis [cm]
       z1 = -50.0           # maximum position of z-axis [cm]
      dom =  c31            # Solid angle
$       e0 =  0.05
infl:{voltage/spec40.inp}

[ Surface ]
set:c32[c30/2.0/50.0]  $ Absorber half length adjusted by parameter c30 
10  rpp  -0.5  0.5  -0.5  0.5 -1.0  0.0           $ Detector
100 rpp -50.0 50.0 -50.0 50.0  0.0 20.0           $ Scatterer
200 rpp  -c32  c32  -c32  c32 -50.0 -49.0         $ Inner surface of Absorber 
201 rpp  -2.0  2.0  -2.0  2.0 -50.0 -49.0         $ Outer surface of Absorber
999 rpp -50.0 50.0 -50.0 50.0 -50.0 20.0          $ Outer space

[ Cell ]
10  10  -0.00121 -10                 $ Detector
100  1  -1.19    -100 -999           $ Scatterer
200 -1           -201  200          $ Absorber to form beam shape
900 10  -0.00121 -999 10 100 #200 $ Air
999 -1            999                $ Outer void

[ Material ]
$ PMMA 1.19g/cm3 
mat[1]   12C  5.0  16O  2.0  1H  8.0 

$ Pb 11.34g/cm3
mat[2]   Pb 1.0

$ Air 0.00121g/cm3
mat[10]   14N  -75.5  16O -23.2   40Ar -1.3

[ Volume ]
10   1.0*1.0*1.0

[ t-track ]
    title = Track distribution
     mesh =  xyz            # mesh type is xyz scoring mesh
   x-type =    2            # x-mesh is linear given by xmin, xmax and nx
       nx =   50            # number of x-mesh points
     xmin =  -25.0          # minimum value of x-mesh points
     xmax =   25.0          # maximum value of x-mesh points
   y-type =    2            # y-mesh is given by the below data
       ny =    1            # number of y-mesh points
     ymin =   -1.0          # minimum value of y-mesh points
     ymax =    1.0          # maximum value of y-mesh points
   z-type =    2            # z-mesh is linear given by zmin, zmax and nz
       nz =   70            # number of z-mesh points
     zmin =  -50.00         # minimum value of z-mesh points
     zmax =   20.00         # maximum value of z-mesh points
   e-type =    1            # e-mesh is given by the below data
       ne =    1            # number of e-mesh points
            0.0  1000.0
     unit =    1            # unit is [1/cm^2/source]
     part = photon
     axis =   xz            # axis of output
     file = track.out       # file name of output for the above axis
    gshow =    2            # 0: no 1:bnd, 2:bnd+mat, 3:bnd+reg 4:bnd+lat
   epsout =    1            # (D=0) generate eps file by ANGEL

[ t-deposit ]
    title = Air Kerma at detector
     mesh =  reg            # mesh type is reg scoring mesh
      reg =   10
     unit =    0            # unit is [Gy/source]
     axis =  reg            # axis of output
   output =  dose
     file = kerma.out       # file name of output for the above axis

[ t-track ]
    title = Photon spectrum at detector
     mesh =  reg            # mesh type is reg scoring mesh
      reg =   10
   e-type =    2            # e-mesh is linear given by emin, emax and ne
       ne =    100          # number of e-mesh points
     emin =    0.0          # minimum value of e-mesh points
     emax =    0.1          # maximum value of e-mesh points
     unit =    1            # unit is [1/cm3/source]
     axis =  eng            # axis of output
     part = photon
     file = spectrum.out    # file name of output for the above axis
   epsout =    1            # (D=0) generate eps file by ANGEL
    angel = ylin
$ ctmin(1) = 1
$ ctmax(1) = 9999
   
[ t-track ]
    title = Track on detector to check field size
     mesh =  xyz            # mesh type is xyz scoring mesh
   x-type =    2            # x-mesh is linear given by xmin, xmax and nx
       nx =  100            # number of x-mesh points
     xmin = -c30*1.5        # minimum value of x-mesh points
     xmax =  c30*1.5        # maximum value of x-mesh points
   y-type =    2            # y-mesh is given by the below data
       ny =  100            # number of y-mesh points
     ymin = -c30*1.5        # minimum value of y-mesh points
     ymax =  c30*1.5        # maximum value of y-mesh points
   z-type =    2            # z-mesh is linear given by zmin, zmax and nz
       nz =    1            # number of z-mesh points
     zmin =   -0.1          # minimum value of z-mesh points
     zmax =    0.1          # maximum value of z-mesh points
   e-type =    1            # e-mesh is given by the below data
       ne =    1            # number of e-mesh points
            0.0  1000.0
     unit =    1            # unit is [1/cm^2/source]
     axis =   xy            # axis of output
     file = fieldsize.out   # file name of output for the above axis
    gshow =    1            # 0: no 1:bnd, 2:bnd+mat, 3:bnd+reg 4:bnd+lat
   epsout =    1            # (D=0) generate eps file by ANGEL

[ counter ] off
  counter = 1
  part = photon
  reg  in  out  coll  ref
  100  0   1    0    0

[ end ]