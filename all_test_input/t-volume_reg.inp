[ T i t l e ]
sample input file of t-volume

[ P a r a m e t e r s ]
 icntl    =          14     # (D=0) 3:ECH 5:NOR 6:SRC 7,8:GSH 11:DSH 12:DUMP
 maxcas   =          10     # (D=10) number of particles per one batch
 maxbch   =          10     # (D=10) number of batches
 file(6)  = phits.out       # (D=phits.out) general output file name

[ S o u r c e ]
   s-type =   1             # mono-energetic axial source
     proj =  proton         # kind of incident particle         
      dir =   1.0           # z-direction of beam [cosine]
       r0 =   0.            # radius [cm]
       z0 =   0.            # minimum position of z-axis [cm]
       z1 =   0.            # maximum position of z-axis [cm]
       e0 =   150.          # energy of beam [MeV]

[ M a t e r i a l ]
mat[1]    1H 2  16O 1     $ 1.0 g/cm3

[ S u r f a c e ]
  10  so     10.
  11  so     100.

[ C e l l ]
 100     1 -1.  -10 
 101     0       10 -11
 102    -1       11

[ T - V o l u m e ]
     mesh =  reg            # mesh type is region-wise
      reg = 100
     file = volume.out      # file name of output for [volume]
   s-type =    1            # 1: Sphere source, 2: Rectangular source
       x0 =  0.000000       # (D=0.0) x of sphere center
       y0 =  0.000000       # (D=0.0) y of sphere center
       z0 =  0.000000       # (D=0.0) z of sphere center
       r0 =  50.00000       # radius of sphere

[ E n d ]

